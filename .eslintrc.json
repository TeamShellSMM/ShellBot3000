{
  "extends": ["airbnb-base", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "env": {
    "commonjs": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "prettier/prettier": ["error", {
      "endOfLine":"auto"
    }],
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-await-in-loop": "off",
    "func-names": "off",
    "strict": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "class-methods-use-this": "off",
    "no-restricted-syntax": [
      "error",
      "ForInStatement",
      "LabeledStatement",
      "WithStatement"
    ],
    "camelcase": [
      "error",
      {
        "allow": ["guild_id", "discord_id"],
        "properties": "never",
        "ignoreDestructuring": true
      }
    ]
  }
}
